/* pages/satement/statement.wxss  */
.dashboard-container {
  background: #f8f9fb;
  padding: 24rpx;
}

/* 头部区域 */
.dashboard-header {
  background: #0097ff;
  border-radius: 24rpx;

  box-shadow: 0 8rpx 32rpx rgba(0, 151, 255, 0.16);
}

.header-top {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}

.shop-picker .picker-content {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 48rpx;
}

.shop-name {
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 16rpx;
}
/* 核心数据看板 */
.revenue-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 70vw;
  margin-left: 10vw;
}


.revenue-main {
  flex: 1;
  text-align: center;
}

.revenue-amount {
  color: #fff;
  font-size: 72rpx;
  font-weight: 600;
  line-height: 1.2;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

.revenue-label {
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
}

/* 数据模块通用样式 */
.data-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 24rpx 0;
  box-shadow: 0 4rpx 24rpx rgba(0, 151, 255, 0.08);
}

.module-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}
.module-header van-icon {
  color: #0097ff;
  size: 50rpx;
}

.deco-line {
  width: 6rpx;
  height: 36rpx;
  background: #0097ff;
  margin-right: 16rpx;
  border-radius: 8rpx;
}

/* 支付方式网格 */
.payment-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  margin-bottom: 24rpx;
}

.payment-item {
  background: rgba(0, 151, 255, 0.05);
  border-radius: 16rpx;
  padding: 24rpx;
}

.payment-value {
  display: flex;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.payment-value text {
  font-size: 40rpx;
  color: #0097ff;
  font-weight: 500;
}

.unit {
  color: #999;
  font-size: 28rpx;
  margin-left: 8rpx;
}

/* 卡券进度条 */
.card-progress {
  height: 8rpx;
  background: rgba(0, 151, 255, 0.1);
  border-radius: 8rpx;
  margin: 16rpx 0;
}

.card-value {
  margin-left: 30rpx;
}

/* 智能简报 */
.report-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.report-value text {
  font-size: 48rpx;
  font-weight: 600;
}

/* 高亮显示 */
.highlight {
  color: #0097ff;
  font-weight: 500;
  margin-left: 12rpx;
}