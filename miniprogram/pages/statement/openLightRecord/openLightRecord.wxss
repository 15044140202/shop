/* pages/statement/openLightRecord/openLightRecord.wxss */
page {
  background-color: #f5f7fa;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
}

.page-header {
  position: relative;
}

.container {
  padding: 20rpx;
}

.record-list {
  height: calc(100vh - 180rpx);
}

.filterButton_box {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  z-index: 99999999;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  width: 360rpx;
}

.filterButton {
  position: relative;
  background-color: #f5f7fa;
  color: #0094ff;
  border-radius: 10rpx;
  height: 50rpx;
  width: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 148, 255, 0.1);
}

.record-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 148, 255, 0.1);
  overflow: hidden;
  position: relative;
}

.record-card.on {
  border-left: 8rpx solid #0094ff;
}

.record-card.off {
  border-left: 8rpx solid #888;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.light-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.card-body {
  padding: 24rpx 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  width: 120rpx;
}

.value {
  color: #333;
  flex: 1;
}

.status {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status.on {
  background-color: rgba(0, 148, 255, 0.1);
  color: #0094ff;
}

.status.off {
  background-color: rgba(136, 136, 136, 0.1);
  color: #888;
}

.empty-tips {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  width: 100%;
  height: 350rpx;
}

.empty-tips image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}