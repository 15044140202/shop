<!--pages/statement/orderForm/orderForm.wxml-->
<block wx:if="{{get_item === '未结账单据'}}">
  <view class="border" wx:for="{{orderForm}}" wx:key="index" wx:if="{{(item.orderName === '店员开台订单' || item.orderName === '自助开台订单' || item.orderName === '自助套餐订单') && item.endTime === '未结账'}}" bind:tap="goto" mark:index='{{index}}'>
    <view class="front">
      <view class="tableNum">
        <text style="font-size: 38rpx;">{{item.tableNum}}号台---</text>
        <text>{{item.openPerson.openPersonName}}</text>
      </view>
      <text style="font-size: 28rpx; color: #999;">{{item.startTime}}</text>
    </view>
    <view>
      <text style="font-size: 38rpx;">押金 : {{item.cashPledge}} </text>
      <van-icon name="arrow" size="38rpx" style="margin-right: 30rpx;"></van-icon>
    </view>
  </view>
</block>
<block wx:elif="{{get_item === '已结账单据'}}">
  <view class="border" wx:for="{{orderForm}}" wx:key="index" wx:if="{{(item.orderName === '店员开台订单' || item.orderName === '自助开台订单' || item.orderName === '自助套餐订单') &&  item.endTime !== '未结账'}}" bind:tap="goto" mark:index='{{index}}'>
    <view class="front">
      <view class="tableNum">
        <text style="font-size: 38rpx;">{{item.tableNum}}号台---</text>
        <text>{{item.openPerson.openPersonName}}</text>
      </view>
      <text style="font-size: 28rpx; color: #999;">{{item.startTime}}</text>
    </view>
    <view>
      <text style="font-size: 38rpx;">{{item.tableCost === '未结账' ?'押金 : ' + item.cashPledge : '台费 : ' + item.tableCost}} </text>
      <van-icon name="arrow" size="38rpx" style="margin-right: 30rpx;"></van-icon>
    </view>
  </view>
</block>
<block wx:elif="{{get_item === '商品单'}}">
  <view class="border" wx:for="{{orderForm}}" wx:key="index" wx:if="{{item.orderName === '商品单'}}" bind:tap="goto" mark:index='{{index}}'>
    <view class="front">
      <view class="tableNum">
        <text style="font-size: 38rpx;">商品单---{{item.sellPerson}}\n</text>
        <text>{{item.buyPerson.name}}</text>
      </view>
      <text style="font-size: 28rpx; color: #999;">{{item.time}}</text>
    </view>
    <view>
      <text style="font-size: 38rpx;">金额 : {{item.commotidyCost}} </text>
      <van-icon name="arrow" size="38rpx" style="margin-right: 30rpx;"></van-icon>
    </view>
  </view>
</block>
<block wx:elif="{{get_item === '会员储值'}}">
  <view class="border" wx:for="{{orderForm}}" wx:key="index" wx:if="{{item.orderName === '储值单'}}" bind:tap="goto" mark:index='{{index}}'>
    <view class="front">
      <view class="tableNum">
        <text style="font-size: 38rpx;">储值单---{{item.person.name}}\n</text>
        <text>{{item.buyPerson.name}}</text>
      </view>
      <text style="font-size: 28rpx; color: #999;">{{item.time}}</text>
    </view>
    <view>
      <text style="font-size: 38rpx;">金额 : {{item.amount}} </text>
      <van-icon name="arrow" size="38rpx" style="margin-right: 30rpx;"></van-icon>
    </view>
  </view>
</block>
<block wx:elif="{{get_item === '入库单'}}">
  <view class="border" wx:for="{{orderForm}}" wx:key="index" wx:if="{{item.orderName === '进货单'}}" bind:tap="goto" mark:index='{{index}}'>
    <view class="front">
      <view class="tableNum">
        <text style="font-size: 38rpx;">进货单---{{item.status}}\n</text>
      </view>
      <text style="font-size: 28rpx; color: #999;">{{item.time}}</text>
    </view>
    <view>
      <text style="font-size: 38rpx;">金额 : {{item.amount}} </text>
      <van-icon name="arrow" size="38rpx" style="margin-right: 30rpx;"></van-icon>
    </view>
  </view>
</block>
<block wx:elif="{{get_item === '收取现金'}}">
  <view class="border" wx:for="{{orderForm}}" wx:key="index" wx:if="{{item.orderName === '店员开台订单' &&( item.payMode === 'cash' ||item.payMode === '现金')}}" bind:tap="goto" mark:index='{{index}}'>
    <view class="front">
      <view class="tableNum">
        <text style="font-size: 38rpx;">{{item.tableNum}}号台---</text>
        <text>{{item.openPerson.openPersonName}}</text>
      </view>
      <text style="font-size: 28rpx; color: #999;">{{item.startTime}}</text>
    </view>
    <view>
      <text style="font-size: 38rpx;">押金 : {{item.cashPledge}} </text>
      <van-icon name="arrow" size="38rpx" style="margin-right: 30rpx;"></van-icon>
    </view>

  </view>
  <view class="border" wx:for="{{orderForm}}" wx:key="index" wx:if="{{item.orderName === '商品单' &&( item.payMode === 'cash'  || item.payMode === '现金')}}" bind:tap="goto" mark:index='{{index}}'>
    <view class="front">
      <view class="tableNum">
        <text style="font-size: 38rpx;">商品单---{{item.sellPerson}}\n</text>
        <text>{{item.buyPerson.name}}</text>
      </view>
      <text style="font-size: 28rpx; color: #999;">{{item.time}}</text>
    </view>
    <view>
      <text style="font-size: 38rpx;">金额 : {{item.commotidyCost}} </text>
      <van-icon name="arrow" size="38rpx" style="margin-right: 30rpx;"></van-icon>
    </view>
  </view>
</block>
