<!--pages/statement/orderForm/orderForm.wxml-->
<block wx:if="{{get_item === '未结账单据'}}">
  <view class="border" wx:for="{{orderForm}}" wx:key="index" wx:if="{{item.endTime === '未结账'}}" bind:tap="goto" mark:index='{{index}}'>
    <view class="front">
      <view class="tableNum">
        <text style="font-size: 38rpx;">{{item.tableNum}}号台---</text>
        <text>{{item.openPerson.openPersonName}}</text>
      </view>
      <text style="font-size: 28rpx; color: #999;">{{item.startTime}}</text>
    </view>
    <view>
      <text style="font-size: 38rpx;">押金 : {{item.cashPledge}} </text>
      <van-icon name="arrow" size="38rpx" style="margin-right: 30rpx;"></van-icon>
    </view>
  </view>
</block>
<block wx:elif="{{get_item === '已结账单据'}}">
  <view class="border" wx:for="{{orderForm}}" wx:key="index" wx:if="{{(item.payMode !== '未结账') && (item.orderName !== '商品单')}}" bind:tap="goto" mark:index='{{index}}'>
    <view class="front">
      <view class="tableNum">
        <text style="font-size: 38rpx;">{{item.tableNum}}号台---</text>
        <text>{{item.openPerson.openPersonName}}</text>
      </view>
      <text style="font-size: 28rpx; color: #999;">{{item.startTime}}</text>
    </view>
    <view>
      <text style="font-size: 38rpx;">押金 : {{item.cashPledge}} </text>
      <van-icon name="arrow" size="38rpx" style="margin-right: 30rpx;"></van-icon>
    </view>
  </view>
</block>
<block wx:elif="{{get_item === '商品单'}}">
<view>shangpindan</view>


</block>