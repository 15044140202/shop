/* pages/tools/tools.wxss  */
.header-bg {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 12vh;
}
 
.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-left: 16rpx;
}
 
.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-top: 8rpx;
}
 
/* 工具菜单容器 */
.menu-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(180rpx, 1fr));
  gap: 24rpx;
  padding: 32rpx;
  background: var(--bg-color);
}
 
/* 工具卡片样式 */
.menu-card {
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 151, 255, 0.08);
}
 
/* 卡片悬停效果 */
.card-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 151, 255, 0.15);
}
 
/* 卡片图标样式 */
.card-icon {
  margin-bottom: 24rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 151, 255, 0.2));
}
 
/* 卡片标题样式 */
.card-title {
  display: block;
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: 500;
  line-height: 1.4;
} 
/* 在pages/tools/tools.wxss中添加以下样式 */
/* 官方商城专属样式 - 修复动画 */
.official-mall-card {
  background: linear-gradient(135deg, #ff3434, #ff6a00);
  box-shadow: 0 6rpx 20rpx rgba(255, 60, 0, 0.4);
  position: relative;
  overflow: hidden;
  border: 2rpx solid #ffd700;
  
  /* 修复动画 - 使用小程序兼容写法 */
  animation: pulse 2s infinite;
  animation-timing-function: ease-in-out;
}

/* 节日装饰角标 */
.festive-corner {
  position: absolute;
  font-size: 28rpx;
  opacity: 0.7;
}
.festive-corner-tl {
  top: 8rpx;
  left: 8rpx;
}
.festive-corner-br {
  bottom: 8rpx;
  right: 8rpx;
  transform: rotate(180deg);
}

/* 悬停效果增强 */
.official-hover {
  transform: translateY(-8rpx) scale(1.03);
  box-shadow: 0 12rpx 30rpx rgba(255, 40, 0, 0.6);
}

/* 心跳动画效果 - 修复版 */
@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 6rpx 20rpx rgba(255, 60, 0, 0.4);
  }
  50% {
    transform: scale(1.02);
    box-shadow: 0 6rpx 40rpx rgba(255, 40, 0, 0.7), 0 0 40rpx rgba(255, 217, 0, 0.5);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 3rpx 20rpx rgba(255, 60, 0, 0.4);
  }
}

/* 确保动画在低端设备也能运行 */
@media (prefers-reduced-motion: no-preference) {
  .official-mall-card {
    animation: pulse 2s infinite ease-in-out;
  }
}

