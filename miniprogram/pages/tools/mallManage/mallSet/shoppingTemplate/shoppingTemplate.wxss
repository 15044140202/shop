/* pages/tools/mallManage/mallSet/shoppingTemplate/shoppingTemplate.wxss */
.container {
  padding: 16px;
  min-height: 100vh;
  background-color: #f7f8fa;
}

.add-btn {
  margin-bottom: 16px;
}

.template-list {
  margin-bottom: 20px;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #969799;
}

.empty-text {
  margin-top: 16px;
  font-size: 14px;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  font-size: 16px;
  font-weight: bold;
}

.popup-content {
  padding: 0 16px;
  max-height: 60vh;
  overflow-y: auto;
}

.popup-footer {
  display: flex;
  padding: 16px;
}

.popup-footer .van-button {
  margin: 0 8px;
}

.van-cell__value {
  display: flex;
  align-items: center;
}

.van-tag {
  margin-left: 8px;
}