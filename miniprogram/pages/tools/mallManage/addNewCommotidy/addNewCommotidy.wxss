.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.form-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.header-section {
  display: flex;
  margin-bottom: 20rpx;
}

.product-image {
  border: 2rpx dashed #0094ff;
  border-radius: 12rpx;
  background-color: #f5f7fa;
  margin-right: 30rpx;
  height: 150rpx;
}

.basic-info {
  flex: 1;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.label-group {
  display: flex;
  flex-direction: column;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

.input {
  font-size: 30rpx;
  color: #333;
  text-align: right;
  width: 50%;
  height: 80rpx;
}

.price-input {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-end;
}

.unit {
  display: flex;
  align-items: center;
  color: #0094ff;
  font-size: 30rpx;
  margin-right: 10rpx;
  height: 80rpx;
}

.placeholder {
  color: #ccc;
}

.picker {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  width: 40vw;
}

.picker-text {
  color: #333;
  margin-right: 10rpx;
}

.image-uploader {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 30rpx;
  display: block;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.uploaded-image {
  width: 300rpx;
  height: 220rpx;
  border-radius: 12rpx;
  background-color: #f5f7fa;
}

.add-image-btn {
  width: 300rpx;
  height: 220rpx;
  border: 2rpx dashed #0094ff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f5f7fa;
}

.add-text {
  font-size: 26rpx;
  color: #0094ff;
  margin-top: 15rpx;
}

.save-btn {
  background-color: #0094ff;
  border-radius: 50rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  margin-top: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 148, 255, 0.3);
}

.save-btn:active {
  opacity: 0.9;
}