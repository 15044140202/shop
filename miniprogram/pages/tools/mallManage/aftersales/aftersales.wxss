page {
  background-color: #f7f7f7;
  padding-bottom: 100rpx;
}

.container {
  padding: 20rpx;
}

/* 商品卡片 */
.goods-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.goods-header {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 26rpx;
  color: #999;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-time {
  color: #666;
}

.goods-item {
  display: flex;
  padding: 20rpx;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-spec {
  font-size: 24rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
}

.goods-price {
  font-size: 28rpx;
  color: #ff4d4f;
  text-align: right;
}

/* 自定义单元格样式 */
.custom-cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #fff;
  font-size: 28rpx;
}

.cell-title {
  color: #333;
}

.cell-value {
  display: flex;
  align-items: center;
  color: #999;
}

.cell-arrow {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

/* 退款金额 */
.refund-symbol {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.refund-input {
  text-align: center;
  color: #ff4d4f;
  font-size: 28rpx;
  width: 200rpx;
  height: 100%;
}

/* 问题描述 */
.problem-description {
  background-color: #fff;
  padding: 24rpx 32rpx;
}

.description-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.description-textarea {
  width: 100%;
  min-height: 160rpx;
  font-size: 26rpx;
  color: #333;
}

/* 上传凭证 */
.upload-title {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
}

.upload-tips {
  font-size: 24rpx;
  color: #999;
  padding: 0 32rpx 20rpx;
  background-color: #fff;
}
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.uploaded-image {
  width: 300rpx;
  height: 220rpx;
  border-radius: 12rpx;
  background-color: #f5f7fa;
}

.add-image-btn {
  width: 300rpx;
  height: 220rpx;
  border: 2rpx dashed #0094ff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f5f7fa;
}
.add-text {
  font-size: 26rpx;
  color: #0094ff;
  margin-top: 15rpx;
}
/* 提交按钮 */
.submit-btn {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: row;
}