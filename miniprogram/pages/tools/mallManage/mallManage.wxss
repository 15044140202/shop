/* pages/tools/mall/mall.wxss */
.container {
  height: 100vh;
  background-color: #f5f7fa;
}

.addCommotydiButton {
  position:fixed;
  bottom:10vh;
  right:5vw;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  width: 100rpx;
  font-size: 17px;
  text-align: center;
  background-color: #0094ff;
  color: #fff;
  border-radius: 15rpx;
  z-index: 999;
}

.goods-list {
  height: calc(100vh - 180rpx);
  padding:20rpx 0;
  box-sizing: border-box;
}

.goods-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  width: 100%;
  margin-bottom: 20rpx;
  height: 200rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 148, 255, 0.1);
  transition: all 0.3s ease;
}

.goods-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 148, 255, 0.2);
}

.goods-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
  padding: 20rpx;
}

.goods-image {
  height: 160rpx;
  width: 160rpx;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
  margin-right: 20rpx;
}

.goods-details {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
}

.goods-name {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.name-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 15rpx;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-meta {
  display: flex;
  flex-direction: row;
}

.meta-text {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 8rpx;
  white-space: nowrap;
  max-width: 260rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.price {
  color: #ff4d4f;
  font-weight: bold;
}

.goods-actions {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 160rpx;
  width: 15%;
  padding: 0 20rpx;
}

.action-btn {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  margin: 0;
  padding: 0;
}

.action-btn.on {
  background-color: #0094ff;
  color: #fff;
}

.action-btn.off {
  background-color: #f5f7fa;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.action-btn.restock {
  background-color: #52c41a;
  color: #fff;
}

/* 优化标签样式 */
van-tag {
  margin-left: 10rpx;
  transform: translateY(-2rpx);
}

/* 自定义搜索框 */
.custom-search {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 10rpx;
  width: 92%;
  margin-left: 3%;
  border:solid #0094ff 1rpx;
}
 
.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #303133;
  padding: 10rpx;
}
 
.search-button {
  background-color: #0097ff;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 销售记录 */
.order-list {
  padding: 20rpx;
}
.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.order-header {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
  font-size: 26rpx;
  color: #666;
}
.record-goods-list {
  padding: 0 20rpx;
}
.record-goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}

.record-goods-item:last-child {
  border-bottom: none;
}
.record-goods-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.record-goods-info {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.record-goods-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.record-goods-spec {
  font-size: 28rpx;
  color: #999;
}
.goods-price {
  font-size: 28rpx;
  color: #ff5000;
}
.goods-quantity {
  font-size: 28rpx;
  color: #999;
}
.total-amount {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
}
.order-footer {
  padding: 20rpx;
  border-top: 1rpx solid #f2f2f2;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  flex-wrap: wrap;
}
.order-footer van-button{
  white-space: nowrap;  /* 关键属性：禁止文本换行 */
  display: inline-block; /* 确保按钮本身不换行 */
  overflow: hidden;     /* 可选：超出部分隐藏 */
  text-overflow: ellipsis; /* 可选：超出显示省略号 */ 
}
.action-buttons {
  display: flex;
  justify-content: flex-end;
}

.action-buttons van-button {
  margin-left: 20rpx;
}