/* pages/tools/recruit/addNewRecuit/addNewRecuit.wxss */
.page-header {
  height: 8vh;
}

/* 页面容器 */
.container {
  padding: 20px;
  background-color: #f5f5f5;
}


/* 表单 */
.form {
  background-color: #fff;
  border-radius: 10px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 表单项 */
.form-item {
  margin-bottom: 7px;
}

.post {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.post text{
  width: 100rpx;
}

.label {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5px;
}

.input {
  width: 90%;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 14px;
  color: #333;
}

/* 提交按钮 */
.submit-btn {
  background-color: #0094ff;
  color: #fff;
  font-size: 16px;
  font-weight: bold;
  width: 100%;
  height: 45px;
  border-radius: 5px;
  margin-top: 20px;
}