/* 页面容器 */
.page-header{
  height: 8vh;
}
.container {
  padding: 20px;
  background-color: #f5f5f5;
}
 
/* 招聘信息列表 */
.list {
  margin-bottom: 20px;
}
 
/* 单条招聘信息 */
.item {
  background-color: #fff;
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
.applyPersonInfo{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.applyPersonInfo button{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
  background-color:#0094ff;
  width: 160rpx;
  height: 80rpx;
}
.recruit-intro{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  min-height: 60rpx;
  border-bottom: 1rpx #eee solid;
}
/* 基本信息 */
.info {
  margin-bottom: 15px;
}
 
/* 店铺名称 + 删除图标 */
.shop-name-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
}
 
.shop-name {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}
 
/* 项目名称 */
.label {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  display: block;
  min-width: 25%;
}
 
/* 项目内容 */
.post, .duty, .salary, .work-time, .publish-date, .publisher, .views {
  font-size: 14px;
  color: #666;
  display: block;
}
 
/* 应聘人列表 */
.applicant-list {
  padding-top: 10px;
}
 
.applicant-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}
 
.applicant-title {
  font-size: 16px;
  font-weight: bold;
  color: #0094ff;
}
 
.applicant-content {
  margin-top: 10px;
}
 
/* 应聘人信息 */
.applicant-item {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
}
 
.basic-info {
  display: flex;
  align-items: center;
}
 
.name {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-right: 10px;
}
 
.gender {
  display: flex;
  align-items: center;
  margin-right: 10px;
}
 
.gender text {
  font-size: 14px;
  color: #666;
  margin-left: 5px;
}
 
.age {
  font-size: 14px;
  color: #666;
}
 
/* 电话号码 */
.phone {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  width: 100%;
  color: #0094ff;
  font-size: 14px;
  cursor: pointer;
}
 
.phone text {
  margin-right: 5px;
}
 
/* 操作按钮 */
.actions {
  text-align: right;
}
 
.btn {
  background-color: #0094ff;
  color: #fff;
  font-size: 14px;
  padding: 5px 15px;
  border-radius: 5px;
}