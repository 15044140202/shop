/* pages/tools/mall/myOrders/disBarCode/disBarCode.wxss */
/* 页面基础样式 */
.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #f7f7f7;
}

/* 标题样式 */
.header {
  width: 100%;
  margin: 40rpx 0;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

/* 温馨提示卡片 */
.tip-card {
  width: 90%;
  background-color: #e8f4ff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx 0 40rpx;
  display: flex;
  align-items: center;
}

.tip-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #1890ff;
  line-height: 1.6;
}

/* 条形码区域 */
.barcode-container {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 0;
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.barcode-canvas {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 30rpx;
}

.code-text {
  font-size: 36rpx;
  font-family: 'Courier New', monospace;
  letter-spacing: 2rpx;
  color: #333;
  font-weight: bold;
}

/* 操作按钮 */
.action-area {
  width: 100%;
  margin-top: 60rpx;
}

.refresh-btn {
  width: 60%;
  background-color: #1890ff;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
}

/* 按钮点击效果 */
button::after {
  border: none;
}

.refresh-btn:active {
  opacity: 0.8;
}