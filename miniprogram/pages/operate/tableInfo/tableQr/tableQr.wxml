<!--pages/operate/tableInfo/tableQr/tableQr.wxml-->
<van-tabs active="{{ active }}" bind:change="onChange">
  <van-tab title="开台码"></van-tab>
  <van-tab title="杆柜码"></van-tab>
  <van-tab title="小店码"></van-tab>
  <van-tab title="营销海报"></van-tab>
</van-tabs>
<!-- 开台码 -->
<view style="width: 100%;height: 80rpx;"></view>
<view style="display: flex; flex-direction: row; justify-content: center; align-items: center; width: 100%;">
	<canvas type="2d" id="myCanvas" style=" border: 1rpx #eee solid; width:{{item === 'tableNum' ? '90vw' : item=== 'miniMall' ? '50vw': '80vw'}}; height:{{item === 'tableNum' ? '30vw' : item=== 'miniMall' ? '50vw' : '108.5vw'}};"></canvas>
</view>

<button type="default" style="margin: 50rpx;" bind:tap="downTableQr">{{item === 'tableNum' ? '下载桌台码' :item === 'miniMall' ? '下载商品购买码' :'下载杆柜指图'}}</button>
<button type="{{saveButton}}" disabled="{{saveButtonDisabled}}" style="margin: 50rpx;" bind:tap="saveQr">{{item === 'tableNum' ? '保存桌台码':item === 'miniMall' ? '保存商品购买码' : '保存杆柜指图'}}</button> 