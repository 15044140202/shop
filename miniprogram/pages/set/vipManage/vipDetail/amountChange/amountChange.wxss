/* pages/set/vipManage/vipDetail/amountChange/amountChange.wxss  */
page {
  background-color: #f5f7fa;
}
 
.container {
  padding: 24rpx;
}
 
/* 卡片容器 */
.card {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,151,255,0.08);
  overflow: hidden;
}
 
/* 头部样式 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: rgba(0,151,255,0.1);
  border-bottom: 1rpx solid rgba(0,151,255,0.15);
}
 
.serial-number {
  font-size: 28rpx;
  color: #0097ff;
  font-weight: 500;
}
 
.time-tag {
  font-size: 24rpx;
  color: rgba(0,151,255,0.8);
  background: rgba(0,151,255,0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}
 
/* 主体内容 */
.card-body {
  padding: 24rpx;
}
 
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
 
.label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
}
 
.value {
  font-size: 28rpx;
  color: #333;
  max-width: 70%;
  text-align: right;
}
 
.operator {
  color: #0097ff;
  font-weight: 500;
}
 
.reason {
  color: #444;
}
 
/* 金额样式 */
.amount-row {
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 1rpx dashed rgba(0,151,255,0.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
 
.amount {
  font-size: 32rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}
 
.positive {
  color: #009745;
  background: rgba(0,151,69,0.1);
}
 
.negative {
  color: #ff4646;
  background: rgba(255,70,70,0.1);
}