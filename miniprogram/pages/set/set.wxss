/* pages/set/set.wxss   */
/* 容器样式 */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 24rpx;
}
 
/* 店铺信息卡片 */
.shop-card {
  display: flex;
  align-items: center;
  background-color: transparent;
  width: 85vw;
  margin-left: 3vw;
}
 
.shop-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  background-color: #fff;
}
 
.shop-info {
  flex: 1;
  margin-left: 32rpx;
}
 
.shop-name {
  font-size: 36rpx;
  color: #fff;
  font-weight: 500;
  line-height: 1.4;
}
 
.flex-center {
  display: flex;
  align-items: center;
}
 
.setting-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-left: 8rpx;
}
 
/* 模块分组 */
.module-group {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}
 
.group-header {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #2c3542;
  font-weight: 500;
  background: #fafafa;
}
 
/* 模块项样式 */
.module-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  transition: background-color 0.2s ease;
}
 
.module-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}
 
.item-icon {
  margin-right: 24rpx;
}
 
.item-title {
  flex: 1;
  font-size: 30rpx;
  color: #2c3542;
}
 
/* 分割线 */
.divider-line {
  height: 1rpx;
  background: rgba(0, 0, 0, 0.06);
  margin: 0 32rpx;
} 