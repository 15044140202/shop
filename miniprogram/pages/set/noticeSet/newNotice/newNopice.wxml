<!--pages/set/noticeSet/newNotice/newNopice.wxml-->
<view class="titel">
  <text style="margin-left: 50rpx; color: #999; font-size: 30rpx;">公告:你发出的公告会在会员端显示</text>
</view>
<view class='titel_1'>
  <text>标题</text>
  <input class="input" type="text" placeholder="输入标题" bindblur='titelData' value="{{titel}}" />
</view>
<textarea class="textarea" placeholder="公告内容" bindblur='contentData' value="{{content}}"/>
<view style="height:40rpx; background-color:#f5f5f5; border: #ddd solid 1rpx;"></view>
<view class='titel_1'>
  <text>状态</text>
  <switch checked="{{state}}" bindchange="stateSwitch" style="margin-right: 30rpx;" />
</view>
<view class='titel_1'>
  <view>
    <text>自动弹窗</text>
    <text style="color: #999; font-size: 25rpx; padding-left: 20rpx;">同一时间只有一个生效</text>
  </view>
  <switch checked="{{autoPop}}" bindchange="autoPopSwitch" style="margin-right: 30rpx;" />
</view>
<view class='titel_1'>
  <text>过期时间</text>
  <text style="margin-right: 40rpx;" bind:tap="onDisplay">{{endTime}}</text>
</view>
<view class="button" style=" height:200rpx; background-color: #f5f5f5;">
  <button type="primary" style="width: 90%; margin-bottom: 30rpx; " bind:tap="saveData">保存</button>
</view>
<!-- 日历组件 -->
<van-calendar show="{{ show }}" bind:close="onClose" bind:confirm="onConfirm" />