/* pages/set/amountBook/editor/editor.wxss */
/* 设计变量 */
page {
  --primary-color: #0097FF;
  --bg-color: #F8F9FA;
  --text-primary: #2D3436;
  --border-color: #DFE6E9;
}

/* 页面容器 */
.add-page {
  background: var(--bg-color);
  min-height: 100vh;
}

/* 头部导航 */
.header {
  padding: 40rpx 32rpx 24rpx;
  background: #FFF;
  box-shadow: 0 4rpx 12rpx rgba(45, 52, 54, 0.05);
}

.title {
  font-size: 44rpx;
  color: var(--text-primary);
  font-weight: 600;
  display: block;
  margin-bottom: 48rpx;
}

/* 类型切换 */
.type-switch {
  display: flex;
  border-radius: 12rpx;
  background: rgba(0, 151, 255, 0.1);
  padding: 8rpx;
}

.switch-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  color: #666;
  transition: all 0.3s;
}

.switch-item.active {
  background: var(--primary-color);
  color: #fff;
  border-radius: 8rpx;
  font-size: 42rpx;
}

/* 表单元素 */
.form-body {
  height: calc(100vh - 280rpx);
  padding: 32rpx;
  width: 92%;
}

.form-item {
  background: #FFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(45, 52, 54, 0.03);
}

.item-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  font-weight: 500;
}

/* 金额输入 */
.amount-input {
  font-size: 56rpx;
  color: var(--text-primary);
  font-family: DIN Alternate;
  height: 80rpx;
  padding: 8rpx 0;
}

/* 上传区域 */
.upload-box {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed var(--border-color);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.upload-button {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-tip {
  font-size: 24rpx;
  color: #666;
  margin-top: 16rpx;
}

/* 提交按钮 */
.submit-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 -4rpx 24rpx rgba(0, 151, 255, 0.1);
}