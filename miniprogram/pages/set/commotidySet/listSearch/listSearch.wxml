<wxs src="../../../../utils/tool.wxs" module="tool"/>
<view class="container">
  <!-- 间距调整 -->
  <view style="height: 20rpx;"></view>

  <!-- 入库记录列表 -->
  <view class="record-card" wx:for="{{list}}" wx:key="index">
    <!-- 记录头部信息 -->
    <view class="record-header">
      <text class="operator">操作人: {{item.status}}</text>
      <text class="time">时间: {{tool.timeStampToStr(item.time)}}</text>
    </view>
    
    <!-- 商品列表表格 -->
    <view class="goods-table">
      <!-- 表头 -->
      <view class="table-row header-row">
        <view class="table-cell">商品名称</view>
        <view class="table-cell">入库数量</view>
        <view class="table-cell">单价</view>
      </view>
      
      <!-- 商品数据行 -->
      <view class="table-row" wx:for="{{item.commotidyList}}" wx:for-index='index_1' wx:for-item='item_1' wx:key="index_1">
        <view class="table-cell">{{item_1.name}}</view>
        <view class="table-cell">{{item_1.sum}}</view>
        <view class="table-cell">{{item_1.price / 100}}</view>
      </view>
      
      <!-- 合计行 -->
      <view class="table-row total-row" wx:if="{{item.commotidyList.length > 0}}">
        <view class="table-cell"></view>
        <view class="table-cell total-label">合计金额:</view>
        <view class="table-cell total-value">{{item.amount /100}}</view>
      </view>
    </view>
  </view>
  
  <!-- 无更多数据提示 -->
  <view class="no-more" hidden="{{count !== list.length}}">
    没有更多数据!
  </view>
</view>
