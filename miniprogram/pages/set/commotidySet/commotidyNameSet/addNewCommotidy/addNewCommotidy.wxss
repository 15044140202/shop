page {
  background-color: #f5f5f5;
  padding: 3vw;
  font-size: 28rpx;
  color: #333;
}

/* 主容器 */
.container1 {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 商品卡片样式 */
.commodity-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 3vw;
  width: 88vw;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 图片容器 */
.pic-container {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  gap: 24rpx;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 商品图片 */
.commodity-image {
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  background-color: #f9f9f9;
}

/* 基本信息容器 */
.basic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

/* 表单项目通用样式 */
.form-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

/* 标签样式 */
.label {
  color: #666;
  width: 160rpx;
  font-size: 28rpx;
}

/* 标签容器（带提示文字） */
.label-wrapper {
  display: flex;
  flex-direction: column;
  width: 160rpx;
}

/* 提示文字样式 */
.hint-text {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 输入框样式 */
.input-field {
  flex: 1;
  text-align: right;
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #333;
  min-height: 40rpx;
}

/* 价格输入框 */
.price-input {
  width: 180rpx;
}

/* 选择器样式 */
.picker-field {
  flex: 1;
  text-align: right;
  color: #333;
  padding: 10rpx 0;
  min-height: 40rpx;
}

.picker-field text {
  color: #999;
}

.picker-field text:not([hidden]) {
  color: #333;
}

/* 保存按钮 */
.save-btn {
  width: 94vw;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  background-color: #07c160;
  margin: 3vw 0 0 0;
}

.save-btn::after {
  border: none;
}
