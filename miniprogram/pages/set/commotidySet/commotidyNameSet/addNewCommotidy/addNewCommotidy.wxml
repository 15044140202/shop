<!--pages/set/commotidySet/commotidyNameSet/addNewCommotidy/addNewCommotidy.wxml-->
<view class="pic">
  <van-image width="100" height="100" src="{{newCommotidy.picId}}" bind:tap="Image" mark:name='{{newCommotidy.name}}' />
  <view class="picR">
    <view class="titel">
      <text>名称</text>
      <input style="text-align: right; width: 250rpx;" type="text" value="{{newCommotidy.name === '' ? '' : newCommotidy.name}}" placeholder='请输入商品名称' bindblur="input" mark:name='name' />
    </view>
    <view class="titel">
      <text>单位</text>
      <picker mode="selector" value="{{unitsSelect}}" range="{{units}}" bindchange='onchange' mark:name='units'>
        <text>{{newCommotidy.units === '' ? '请选择单位' : newCommotidy.units}}</text>
      </picker>
    </view>
    <view class="titel">
      <text>分类</text>
      <picker mode="selector" value="{{classSelect}}" range="{{class}}" bindchange='onchange' mark:name='class'>
        <text>{{newCommotidy.class === '' ? '请选择分类' : newCommotidy.class}}</text>
      </picker>
    </view>
  </view>
</view>
<view class="titel">
  <text>进货价格</text>
  <input style="text-align: center; height: 100%; width: 150rpx; " type="text" value="{{newCommotidy.primeCost === 0 ? '' : newCommotidy.primeCost}}" placeholder='请输入进货价格' bindblur="input" mark:name='primeCost' />
</view>
<view class="titel">
  <text>售卖价格</text>
  <input style="text-align: center; height: 100%; width: 150rpx;" type="text" value="{{newCommotidy.sellCost === 0 ? '': newCommotidy.sellCost}}" placeholder='请输入售卖价格' bindblur="input" mark:name='sellCost' />
</view>
<view class="titel">
  <view>
  <text>库存数量</text>
  <text hidden="{{index == '-1' ? true :false}}" style="font-size: 28rpx;color: #ccc;">修改数量请到商品入库</text>
</view>
  <input style="text-align: center; height: 100%; width: 150rpx;" type="text" value="{{newCommotidy.sum === 0 ? '' : newCommotidy.sum}}" disabled="{{index == '-1'? false : true }}" placeholder='请输入库存数量' bindblur="input" mark:name='sum' />
</view>
<view class="titel">
<view>
  <text>最低数量</text>
  <text style="font-size: 28rpx;color: #ccc;">提示补货的数量</text>
</view>
  <input style="text-align: center; height: 100%; width: 150rpx;" type="text" value="{{newCommotidy.lowSum === 0 ? '' : newCommotidy.lowSum}}" placeholder='请输入最低数量' bindblur="input" mark:name='lowSum' />
</view>
<button type="primary" style="margin: 50rpx;" bind:tap="save">保存</button>