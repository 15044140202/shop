<!--pages/login/login.wxml-->
<view class="login" hidden="{{hidden}}">
  <view class="title">免费注册店铺</view>
  <view class="inputBorder">请输入店铺名称:
    <input class="input"  placeholder="店铺名称:" bindblur="shopNameFunction" type="text" />
  </view>
  <view class="inputBorder">请输入店铺地址:
    <input class="input" placeholder="店铺地址:" bindblur="shopAddFunction" type="text" />
  </view>
  <view class="inputBorder" style="margin-top: 30rpx;">
    <checkbox value="{{agree}}" bind:tap="tap" mark:item="agree" />我已认真阅读并同意
    <text style="color: red;" bind:tap="goto">{{'<<软件使用协议>>'}}</text>
  </view>
  <button style="width: 80%; margin-top: 50rpx;" type="primary" bind:tap="confirmFunction">确定</button>
</view>