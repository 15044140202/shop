.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 999;
}

.modal-container {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx 12rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

.modal-header {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-list {
  padding: 0 30rpx;
}

.menu-item {
  position: relative;
}

.menu-text {
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}

.menu-divider {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background-color: #f0f0f0;
}

.cancel-btn {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  margin-top: 20rpx;
  border-top: 10rpx solid #f5f5f5;
}