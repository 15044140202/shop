/* components/video-uploader/video-uploader.wxss */
.video-uploader {
  width: 100%;
  margin-bottom: 30rpx;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
}

.add-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.add-text {
  font-size: 30rpx;
  color: #666;
}

.video-preview {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.video {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 1;
}