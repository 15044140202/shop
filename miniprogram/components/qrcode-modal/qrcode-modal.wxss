/* 遮罩层 */
.qrcode-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 弹窗容器 */
.qrcode-container {
  width: 90%;
  max-width: 1200rpx;
  height: 80%;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  animation: slideUp 0.4s ease;
  box-shadow: 0 20rpx 60rpx rgba(0, 148, 255, 0.2);
}

@keyframes slideUp {
  from { 
    transform: translateY(100rpx) scale(0.95);
    opacity: 0;
  }
  to { 
    transform: translateY(0) scale(1);
    opacity: 1;
  }
}

/* 标题栏 - 改为 #0094ff 主题色 */
.qrcode-header {
  padding: 30rpx 40rpx;
  background: #0094ff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

/* 标题栏的渐变效果 */
.qrcode-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
  pointer-events: none;
}

.qrcode-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.qrcode-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  position: relative;
  z-index: 1;
}

.qrcode-close:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.close-icon {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: 300;
  line-height: 1;
}

/* 内容区域 */
.qrcode-content {
  padding: 40rpx;
}

/* 图片容器 */
.image-wrapper {
  width: 600rpx;
  height: 600rpx;
  margin: 0 auto 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  position: relative;
}

.qrcode-image {
  width: 100%;
  height: 100%;
  min-height: 100rpx;
  background: #ffffff;
}

/* 加载状态 - 使用 #0094ff */
.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0094ff; /* 改为 #0094ff */
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 提示信息 - 使用 #0094ff 相关色 */
.hint-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #e6f7ff; /* 浅蓝色背景 */
  border-radius: 8rpx;
  margin-top: 20rpx;
  border: 1rpx dashed #91d5ff; /* 淡蓝色边框 */
}

.hint-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #0094ff; /* 图标颜色 */
}

.hint-text {
  font-size: 24rpx;
  color: #0094ff; /* 文字颜色 */
}

/* 操作按钮 */
.qrcode-actions {
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s;
}

.btn::after {
  border: none;
}

.btn-close {
  background: #f5f5f5;
  color: #666;
}

.btn-close:active {
  background: #e8e8e8;
  transform: scale(0.98);
}

.btn-save {
  background: #0094ff; /* 主要按钮使用 #0094ff */
  color: #ffffff;
  position: relative;
  overflow: hidden;
}

/* 保存按钮的点击效果 */
.btn-save::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
  pointer-events: none;
}

.btn-save:active {
  background: #0080e0; /* 按下时稍深的蓝色 */
  transform: scale(0.98);
}

.btn-refresh {
  background: #0094ff; /* 刷新按钮也使用 #0094ff */
  color: #ffffff;
  position: relative;
  overflow: hidden;
}

.btn-refresh::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
  pointer-events: none;
}

.btn-refresh:active {
  background: #0080e0;
  transform: scale(0.98);
}

/* 空状态图标 */
.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
  color: #0094ff; /* 空状态图标使用主题色 */
}

.empty-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-tips {
  text-align: center;
  padding: 40rpx;
}

.error-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
  color: #ff4d4f;
}

.error-text {
  font-size: 28rpx;
  color: #ff4d4f;
  line-height: 1.4;
}

/* 描述信息 */
.qrcode-desc {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  margin: 20rpx 0;
  line-height: 1.4;
}

/* 重试按钮使用主题色 */
.retry-btn {
  margin-top: 20rpx;
  background: #0094ff;
  color: #ffffff;
  position: relative;
  overflow: hidden;
}

.retry-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
  pointer-events: none;
}

.retry-btn:active {
  background: #0080e0;
  transform: scale(0.98);
}

/* 图片容器的边框在加载时可以有主题色效果 */
.image-wrapper.loading {
  border-color: #0094ff;
}

/* 添加一个聚焦效果 */
.qrcode-container:focus {
  outline: none;
  box-shadow: 0 0 0 4rpx rgba(0, 148, 255, 0.3);
}

/* 阴影效果也使用主题色相关 */
.qrcode-container {
  box-shadow: 0 10rpx 30rpx rgba(0, 148, 255, 0.15);
}

/* 按钮的悬停效果（小程序不支持:hover，但可以保留用于其他平台） */
.btn-save:hover {
  background: #0080e0;
}

/* 加载中的文字颜色 */
.loading-text {
  color: #0094ff;
  font-weight: 500;
}

/* 二维码图片边框效果 */
.qrcode-image {
  border-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 148, 255, 0.1);
}

/* 弹窗关闭时的动画 */
.qrcode-mask.hiding .qrcode-container {
  animation: slideDown 0.3s ease forwards;
}

@keyframes slideDown {
  from { 
    transform: translateY(0) scale(1);
    opacity: 1;
  }
  to { 
    transform: translateY(100rpx) scale(0.95);
    opacity: 0;
  }
}

/* 添加一个轻微的背景纹理效果 */
.qrcode-header::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 10% 20%, rgba(255,255,255,0.1) 0%, transparent 20%),
    radial-gradient(circle at 90% 80%, rgba(255,255,255,0.1) 0%, transparent 20%);
  pointer-events: none;
}