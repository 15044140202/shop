/* components/friendCircle/firendCircle.wxss */
.comment-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  display: none;
}

.comment-box.show {
  display: block;
}

.mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.content {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}

.actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.btn {
  margin: 0;
  padding: 0 40rpx;
  height: 70rpx;
  width: 20%;
  line-height: 70rpx;
  font-size: 30rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 6rpx;
}