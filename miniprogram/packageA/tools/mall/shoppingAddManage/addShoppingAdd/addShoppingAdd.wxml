<!--pages/tools/mall/shoppingAddManage/addShoppingAdd/addShoppingAdd.wxml-->
<view class="edit-container">
  <form bindsubmit="saveAddress">
    <view class="form-item">
      <text class="label">收货人</text>
      <input class="input" name="name" placeholder="请输入收货人姓名" value="{{editData.name}}" />
    </view>
    
    <view class="form-item">
      <text class="label">手机号码</text>
      <input class="input" name="phone" type="number" placeholder="请输入手机号码" value="{{editData.phone}}" />
    </view>
    
    <view class="form-item" bindtap="chooseRegion">
      <text class="label">所在地区</text>
      <view class="input region">
        <text wx:if="{{editData.address}}">{{editData.address}}</text>
        <text wx:else class="placeholder">请选择所在地区</text>
        <icon type="arrowright" size="16" color="#999"></icon>
      </view>
    </view>
    
    <view class="form-item">
      <text class="label">详细地址</text>
      <input class="input" name="detail" placeholder="请输入详细地址" value="{{editData.detail}}" />
    </view>
    
    <view class="form-item default-item">
      <text class="label">设为默认地址</text>
      <switch name="defaultAdd" checked="{{editData.defaultAdd}}"  color="#0094ff" />
    </view>
    
    <button class="save-btn" formType="submit">保存地址</button>
  </form>
</view>