/* pages/tools/mall/mall.wxss */
.container {
  width: 100%;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 搜索栏样式 */
.search-container {
  width: 65%;
  height: 100%;
  background-color: #fff;
  border-bottom-left-radius: 40rpx;
  border-top-left-radius: 40rpx;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
  display: flex;
  align-items: center;
  padding: 0 4vw;
  box-shadow: 0 4rpx 12rpx rgba(0, 148, 255, 0.2);
}
.search-board{
  display: flex;
  flex-direction: row;
  justify-content: space-between;

  width: 100%;
  height: 80rpx;
  margin-top: 3vh;
}
.my-orders{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

.scan-icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 16rpx;
}

/* 拼多多风格商品列表 */
.pdd-goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 修改商品项为相对定位 */
.pdd-goods-item {
  position: relative; /* 新增这行，确保标签能相对于商品定位 */
  width: 48%;
  height: auto;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 优化图片容器，确保标签能正确显示在图片上 */
.pdd-goods-image {
  position: relative; /* 新增 */
  width: 100%;
  height: auto;
  min-height: 200rpx;
  max-height: 400rpx;
  display: block;
  object-fit: cover;
}

/* 商品名称（自动截断） */
.pdd-goods-name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
  flex: 1;
  min-width: 0; /* 关键：允许文本截断 */
}

.pdd-price-section {
  padding: 8rpx 12rpx 0;
  display: flex;
  flex-direction: column;
  align-items: baseline;
}

.pdd-current-price {
  color: #ff5000;
  font-size: 32rpx;
  font-weight: bold;
}

.pdd-original-price {
  color: #999;
  font-size: 22rpx;
  text-decoration: line-through;
  margin-left: 8rpx;
}

.pdd-sales {
  color: #999;
  font-size: 22rpx;
  padding: 0 12rpx 12rpx;
}
/* 购物车样式 */
.shoppingCar{
  position: fixed;
  bottom: 100rpx;
  right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  background-color: #0094ff;
  border-radius: 40rpx;
}
/* 商品标签样式 */

/* 名称和标签行 */
.title-row {
  display: flex;
  align-items: center;
  min-height: 40rpx; /* 保证统一高度 */
  margin-top: 5rpx;
  margin-left: 5rpx;
}

/* 标签容器 */
.tag-container {
  display: flex;
  margin-right: 10rpx;
  flex-shrink: 0; /* 防止被名称挤压 */
}

/* 基础标签样式 */
.tag {
  position: relative;
  height: 36rpx;
  border-radius: 4rpx;
  overflow: hidden;
  margin-right: 8rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tag-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0.9;
}

.tag-text {
  position: relative;
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
  padding: 0 12rpx;
  line-height: 36rpx;
  white-space: nowrap;
}

/* 商品名称（自动截断） */
.pdd-goods-name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
  flex: 1;
  min-width: 0; /* 关键：允许文本截断 */
}
/* 各类标签颜色 */
.tag-hot .tag-bg { background: linear-gradient(90deg, #FF2E63, #FF2A2A); }
.tag-discount .tag-bg { background: linear-gradient(90deg, #FF9500, #FF5000); }
.tag-brand .tag-bg { background: linear-gradient(90deg, #333333, #666666); }
.tag-new .tag-bg { background: linear-gradient(90deg, #4B9BF8, #3A7DF8); }
.tag-limit .tag-bg { background: linear-gradient(90deg, #FF6B00, #FF2A2A); }