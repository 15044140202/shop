/* 容器样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 双向滚动区域 */
.pyramid-scroll {
  flex: 1;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center; 
  align-items: center;
}

.pyramid-container {
  min-width: 100%;
  min-height: 100%;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
}

/* 金字塔整体样式 */
.pyramid {
  width: auto;
  min-width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

/* 每一层的样式 */
.layer {
  width: auto;
  min-width: 100%;
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
}

.layer-content {
  width: auto;
  min-width: 100%;
  display: flex;
  flex-direction: column;
}


/* 横向节点滚动容器 */
.nodes-scroll {
  width: 100%;
  white-space: nowrap;
}

/* 节点容器 - 横向排列 */
.nodes-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
  min-width: 100%;
}

/* 节点样式 */
.node {
  width: 150rpx;
  height: 100rpx;
  background: linear-gradient(45deg, #FF6B6B, #FF8E53);
  border-radius: 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
  flex-shrink: 0;
}

.node::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.node:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
}

.node:active::before {
  left: 100%;
}

.node-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.node-text {
  font-size: 24rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.node-id {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}

/* 不同层级的颜色变化 */
.layer-1 .node {
  background: linear-gradient(45deg, #FF6B6B, #FF8E53);
}

.layer-2 .node {
  background: linear-gradient(45deg, #4ECDC4, #44A08D);
}

.layer-3 .node {
  background: linear-gradient(45deg, #FFD93D, #FF9A3D);
}

.layer-4 .node {
  background: linear-gradient(45deg, #6BCF7F, #4CAF50);
}

.layer-5 .node {
  background: linear-gradient(45deg, #A78BFA, #8B5CF6);
}

.layer-6 .node {
  background: linear-gradient(45deg, #F87171, #EF4444);
}

.layer-7 .node {
  background: linear-gradient(45deg, #60A5FA, #3B82F6);
}

.layer-8 .node {
  background: linear-gradient(45deg, #F59E0B, #D97706);
}

.layer-9 .node {
  background: linear-gradient(45deg, #10B981, #059669);
}

.layer-10 .node {
  background: linear-gradient(45deg, #8B5CF6, #7C3AED);
}

/* 右下角填充 */
.corner-padding {
  width: 200rpx;
  height: 200rpx;
  align-self: flex-end;
}

/* 横向滚动条样式 */
.nodes-scroll ::-webkit-scrollbar {
  height: 6rpx;
}

.nodes-scroll ::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
}

.nodes-scroll ::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 10rpx;
}

.nodes-scroll ::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.5);
}

/* 主滚动条样式 */
.pyramid-scroll ::-webkit-scrollbar {
  width: 8rpx;
  height: 8rpx;
}

.pyramid-scroll ::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
}

.pyramid-scroll ::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 10rpx;
}

.pyramid-scroll ::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.5);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .layer {
    padding: 0 20rpx;
    margin-bottom: 50rpx;
  }
  
  .nodes-container {
    gap: 20rpx;
  }
  
  
  .control-buttons {
    gap: 10rpx;
  }
  
  .control-btn {
    min-width: 140rpx;
    font-size: 22rpx;
    padding: 18rpx;
  }
}
/* 选项卡容器 */
.tab-container {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 选项卡按钮组 */
.tab-buttons {
  display: flex;
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 8rpx;
  position: relative;
}
/* 单个选项卡按钮 */
.tab-button {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 0;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
}

.tab-button.active {
  background: white;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.tab-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
  transition: all 0.3s ease;
}

.tab-button.active .tab-text {
  color: #007AFF;
  font-weight: 700;
}

/* 选项卡指示器 */
.tab-indicator {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: transparent;
  margin-top: 8rpx;
  transition: all 0.3s ease;
}

.tab-button.active .tab-indicator {
  background: #007AFF;
  width: 24rpx;
  border-radius: 3rpx;
}

/* 选项卡内容区域 */
.tab-content {
  padding: 0 30rpx 30rpx; 
}

.tab-panel {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
}

/* 不同面板的特定样式 */
.winner-panel {
  border-top: 4rpx solid #4CAF50;
}

.loser-panel {
  border-top: 4rpx solid #FF9800;
}

.final-panel {
  border-top: 4rpx solid #E91E63;
  background: linear-gradient(135deg, #fff, #fff5f5);
}

.panel-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
  text-align: center;
}

.winner-panel .panel-title {
  color: #4CAF50;
}

.loser-panel .panel-title {
  color: #FF9800;
}

.final-panel .panel-title {
  color: #E91E63;
}

.panel-content {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 选项卡按钮的悬停效果 */
.tab-button:not(.active):active {
  background: rgba(0, 122, 255, 0.1);
  transform: scale(0.98);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .tab-buttons {
    margin: 20rpx;
    padding: 6rpx;
  }
  
  .tab-button {
    padding: 20rpx 0;
  }
  
  .tab-text {
    font-size: 26rpx;
  }
  
  .tab-content {
    padding: 0 20rpx 20rpx;
  }
  
  .tab-panel {
    padding: 30rpx;
  }
  
  .panel-title {
    font-size: 30rpx;
    margin-bottom: 20rpx;
  }
  
  .panel-content {
    font-size: 26rpx;
  }
}

/* 选项卡入场动画 */
.tab-panel {
  animation: tabFadeIn 0.3s ease;
}

@keyframes tabFadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
/* 二报选手选择框 */
/* 二报选手选择框 - 美化版 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  animation: fadeIn 0.3s ease;
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  height: 70%;
  background: white;
  border-radius: 20rpx;
  z-index: 1000;
  box-shadow: 0 10rpx 50rpx rgba(0, 148, 255, 0.2);
  animation: slideUp 0.3s ease;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 标题栏 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 32rpx;
  background: linear-gradient(135deg, #0094ff, #007ce5);
  color: white;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
}

.header-close {
  font-size: 48rpx;
  line-height: 1;
  color: white;
  padding: 10rpx;
  margin: -10rpx;
}

/* 选项列表 */
.option-list {
  flex: 1;
  background: #fafbfc;
  height: 65%;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.2s ease;
  margin: 0 20rpx 10rpx 20rpx;
  border-radius: 16rpx;
  margin-top: 10rpx;
}

.option-item:active {
  background: #f8f8f8;
  transform: scale(0.995);
}

.option-item.selected {
  background: linear-gradient(135deg, #0094ff15, #0094ff08);
  border: 1rpx solid #0094ff;
  box-shadow: 0 4rpx 16rpx rgba(0, 148, 255, 0.1);
}

.option-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.option-item.selected .option-text {
  color: #0094ff;
  font-weight: 600;
}

.check-icon {
  color: #0094ff;
  font-size: 32rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 底部按钮 */
.modal-footer {
  display: flex;
  padding: 24rpx 32rpx;
  background: white;
  border-top: 1rpx solid #eee;
  gap: 20rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-cancel {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.btn-cancel:active {
  background: #e9ecef;
}

.btn-confirm {
  background: linear-gradient(135deg, #0094ff, #007ce5);
  color: white;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 148, 255, 0.3);
}

.btn-confirm:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 148, 255, 0.3);
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translate(-50%, -40%);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%);
  }
}