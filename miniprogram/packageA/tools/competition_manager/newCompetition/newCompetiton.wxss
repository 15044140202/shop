/* pages/create-competition/create-competition.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin-bottom: 50rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}
.location_board{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.form-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.placeholder {
  color: #bbb;
}

.picker {
  display: inline-block;
  width: 48%;
  margin-right: 4%;
}

.picker:last-child {
  margin-right: 0;
}

.picker-text {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  color: #333;
}

.time-picker {
  width: 40%;
}

.number-input {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  margin: 0 auto;
}

.number-btn {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  background-color: #f0f0f0;
  border-radius: 50%;
  color: #666;
}

.number-value {
  margin: 0 40rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 规则选择器样式 */
.rules-selector {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rule-item {
  padding: 24rpx 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.rule-item.active {
  background-color: #0094ff;
  color: #fff;
  border-color: #0094ff;
}

.custom-rules {
  height: 0;
  opacity: 0;
  transition: all 0.3s ease;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.custom-rules.show {
  height: 200rpx;
  opacity: 1;
  margin-top: 20rpx;
  padding: 20rpx;
}

/* 奖金样式 */
.prize-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.prize-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
}

.prize-rank {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.prize-input-container {
  display: flex;
  align-items: center;
  background-color: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  width: 200rpx;
}

.currency-symbol {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.prize-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  text-align: right;
}

.total-prize {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #0094ff;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.status-selector {
  display: flex;
  justify-content: space-between;
}

.status-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  margin: 0 10rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.status-item.active {
  background-color: #0094ff;
  color: #fff;
  border-color: #0094ff;
}

.submit-btn-container {
  margin-top: 60rpx;
}

.submit-btn {
  background-color: #0094ff;
  color: #fff;
  border-radius: 50rpx;
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 148, 255, 0.3);
}

.submit-btn:active {
  background-color: #0077cc;
}